{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "target": "es5",
    "strict": false,
    "outDir": "./dist",
    "emitDecoratorMetadata":true
  },
  "include": ["src/**/*"],
}
